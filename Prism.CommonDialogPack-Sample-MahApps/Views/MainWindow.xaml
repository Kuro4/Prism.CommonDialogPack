<metro:MetroWindow x:Class="Prism.CommonDialogPack_Sample_MahApps.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prism.CommonDialogPack_Sample_MahApps"
        mc:Ignorable="d"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        Title="{Binding Title}" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Button Command="{Binding ShowNotificationDialog}"
                    Content="Show Notification Dialog"/>
            <Button Command="{Binding ShowConfirmationDialog}"
                    Content="Show Confirmation Dialog"/>
            <Button Command="{Binding ShowFolderSelectDialog}"
                    Content="Show FolderSelect Dialog"/>
            <Button Command="{Binding ShowFileSelectDialog}"
                    Content="Show FileSelect Dialog"/>
        </StackPanel>
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <TextBlock Text="{Binding ResultMessage.Value}"
                       Background="Black"
                       Foreground="White"/>
        </ScrollViewer>
    </Grid>
</metro:MetroWindow>
