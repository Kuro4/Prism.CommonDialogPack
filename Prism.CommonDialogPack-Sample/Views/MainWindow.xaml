<Window x:Class="Prism.CommonDialogPack_Sample.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="350" Width="525" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel>
            <Button Command="{Binding ShowNotificationDialog}"
                    Content="Show Notification Dialog"/>
            <Button Command="{Binding ShowConfirmationDialog}"
                    Content="Show Confirmation Dialog"/>
        </StackPanel>
        <TextBlock Text="{Binding ResultMessage.Value}"
                   Grid.Row="1"/>
    </Grid>
</Window>
